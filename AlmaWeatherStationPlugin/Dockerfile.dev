FROM openjdk:8
RUN apt-get update && apt-get install -y netcat
WORKDIR /usr/src/alma_weather_plugin
COPY dist/AlmaWeatherStationPlugin.jar /usr/src/alma_weather_plugin
COPY config/config-docker.json /usr/src/alma_weather_plugin
RUN mv /usr/src/alma_weather_plugin/config-docker.json /usr/src/alma_weather_plugin/config-dev.json
COPY entrypoint.sh /usr/src/alma_weather_plugin
CMD ["./entrypoint.sh"]
